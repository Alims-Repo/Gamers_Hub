<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark2</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>

        <item name="selected_nav_bar_icon">@color/colorAccentBlue</item>
        <item name="unselected_nav_bar_icon">@color/colorGray</item>
        <item name="navigation_background">@color/colorWhite</item>
        <item name="android:fontFamily">@font/google_sans_regular</item>
        <item name="BlackWhite">@color/colorDark</item>
        <item name="WhiteBlack">@color/colorWhite</item>
        <item name="chipStyle">@style/Chip_Style</item>
        <item name="Gray">@color/colorLiteGray</item>
        <item name="Back">@color/colorWhite2</item>
        <item name="android:navigationBarColor">@color/colorWhite</item>
    </style>

    <style name="AppThemeDark" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>

        <item name="selected_nav_bar_icon">@color/colorWhite</item>
        <item name="unselected_nav_bar_icon">@color/colorGray</item>
        <item name="navigation_background">@color/colorDark</item>
        <item name="android:fontFamily">@font/google_sans_regular</item>
        <item name="BlackWhite">@color/colorWhite</item>
        <item name="WhiteBlack">@color/colorDark</item>
        <item name="chipStyle">@style/Chip_Style</item>
        <item name="Gray">@color/colorGray</item>
        <item name="Back">@color/colorBlack2</item>
        <item name="android:windowBackground">@color/colorBlack</item>
        <item name="android:navigationBarColor">@color/colorBlack</item>
    </style>

    <style name="BottomNavigation.ActiveItemTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/rainbow_font</item>
    </style>

    <style name="Chip_Style" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/backgeound_chip_color</item>
        <item name="android:textColor">@color/text_chip_color</item>
        <item name="checkedIconVisible">true</item>
        <item name="checkedIcon">@drawable/ic_checked</item>
    </style>
    
</resources>
